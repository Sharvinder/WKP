package com.ibm.training.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.ibm.training.model.CaloriesWeekly;
import com.ibm.training.repository.WeeklyChartRepository;

@Service
public class WeeklyChartService {
	
	@Autowired
	WeeklyChartRepository repo;

	public Iterable<CaloriesWeekly> getAllCharts() {
		
		return repo.findAll();
	}

}
